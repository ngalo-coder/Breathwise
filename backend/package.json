{
  "name": "unep-air-platform-backend",
  "version": "2.0.0",
  "description": "UNEP Air Quality Policy Platform API - Production Ready with Real Data Integration",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "cross-env PORT=8000 nodemon src/app.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "health": "curl http://localhost:$PORT/health || echo 'Health check failed'",
    "check-apis": "node scripts/check-api-connectivity.js",
    "migrate": "node scripts/migrate-database.js",
    "seed": "node scripts/seed-database.js",
    "backup": "node scripts/backup-data.js",
    "deploy": "npm run lint && npm test && echo 'Ready for deployment'"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-slow-down": "^1.6.0",
    "fast-xml-parser": "^4.5.3",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "socket.io": "^4.7.5",
    "winston": "^3.11.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "moment-timezone": "^0.5.43",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "json2csv": "^5.0.7",
    "sharp": "^0.32.6",
    "multer": "^1.4.5-lts.1",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "nodemailer": "^6.9.7",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "cross-env": "^7.0.3",
    "supertest": "^6.3.3",
    "@types/node": "^20.9.0"
  },
  "keywords": [
    "unep",
    "air-quality",
    "policy",
    "environmental",
    "africa",
    "nairobi",
    "satellite-data",
    "weather-api",
    "pollution-monitoring",
    "real-time",
    "copernicus",
    "sentinel-5p",
    "openaq",
    "weatherapi"
  ],
  "author": "UNEP",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ngalo-coder/breathwise.git"
  },
  "bugs": {
    "url": "https://github.com/ngalo-coder/breathwise/issues"
  },
  "homepage": "https://github.com/ngalo-coder/breathwise#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    }
  }
}