{
  "name": "unep-air-platform-backend",
  "version": "2.1.0",
  "description": "UNEP Air Quality Policy Platform API - AI-Enhanced Production Ready with Real Data Integration",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:debug": "cross-env PORT=8000 DEBUG=* nodemon src/app.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "health": "curl http://localhost:${PORT:-8000}/health || echo 'Health check failed'",
    "check-apis": "node scripts/check-api-connectivity.js",
    "migrate": "node scripts/migrate-database.js",
    "migrate:ai": "node scripts/migrate-ai-tables.js",
    "seed": "node scripts/seed-database.js",
    "seed:ai": "node scripts/seed-ai-data.js",
    "backup": "node scripts/backup-data.js",
    "cleanup": "node scripts/cleanup-old-data.js",
    "ai:test": "node scripts/test-ai-integration.js",
    "deploy": "npm run lint && npm test && echo 'Ready for deployment'",
    "performance:test": "node scripts/performance-test.js",
    "monitoring:start": "node scripts/start-monitoring.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-slow-down": "^1.6.0",
    "fast-xml-parser": "^4.5.3",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "socket.io": "^4.7.5",
    "winston": "^3.11.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "moment-timezone": "^0.5.43",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "json2csv": "^5.0.7",
    "sharp": "^0.32.6",
    "multer": "^1.4.5-lts.1",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "nodemailer": "^6.9.7",
    "ws": "^8.14.2",
    "simple-statistics": "^7.8.3",
    "mathjs": "^12.1.0",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "bull": "^4.12.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "cross-env": "^7.0.3",
    "supertest": "^6.3.3",
    "@types/node": "^20.9.0",
    "artillery": "^2.0.3",
    "clinic": "^12.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/scripts/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "prefer-const": "error",
      "no-var": "error",
      "object-shorthand": "error",
      "prefer-template": "error"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js,json",
    "ignore": [
      "src/**/*.test.js",
      "coverage/",
      "node_modules/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "pre-push": "npm run test:coverage"
    }
  },
  "keywords": [
    "unep",
    "air-quality",
    "policy",
    "environmental",
    "africa",
    "nairobi",
    "satellite-data",
    "weather-api",
    "pollution-monitoring",
    "real-time",
    "copernicus",
    "sentinel-5p",
    "openaq",
    "weatherapi",
    "ai-powered",
    "machine-learning",
    "openrouter",
    "claude",
    "policy-recommendations",
    "early-warning",
    "hotspot-detection",
    "environmental-monitoring",
    "public-health",
    "hackathon",
    "innovation"
  ],
  "author": "UNEP Environmental Monitoring Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ngalo-coder/breathwise.git"
  },
  "bugs": {
    "url": "https://github.com/ngalo-coder/breathwise/issues"
  },
  "homepage": "https://github.com/ngalo-coder/breathwise#readme"
}